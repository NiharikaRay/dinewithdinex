//- Show Offer
extends layout

block content
    div.row
        div.small-12.columns.page-title
            h1= "Offer Info"

    div.row
        div.small-3.columns.offer-prof-pic
            img(src="http://graph.facebook.com/"+offer.user_id+"/picture?type=large")
        div.small-9.columns
            h1=offer.fb_name
            p="Wants to sell " + offer.type +" at $" + offer.fixedPrice() + "."
            p=offer.fb_name + " is currently located at " + offer.location + "."
            p="The offer will expire in " + offer.expiration + " hours."
            p="You can reach " + offer.fb_name + " at " + offer.contact_info
            p="This offer was made on " + offer.formatDate() + " at " + offer.formatTime()

    div.row
        div.small-6.columns
        div.small-6.columns
            br
            a(onclick="acceptOffer()")="I want to accept this offer!"