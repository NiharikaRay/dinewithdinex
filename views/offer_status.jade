//- Show Offer Status
extends layout

block content
    div.row
        div.small-12.columns.page-title
            h1= "Offer Status"
        div.row.status-info
        - if (offer.accepted === false){
            div.offer.row
                p Nobody has accepted this offer yet.
        -} else {
            div.offer.row
                p= offer.buyer_name + " has accepted your offer"
                a(onclick="rejectOffer()")= "Reject this offer"
                br
                a(onclick="completeOffer()")= "Complete this offer"
        -}