//- Show Offer Status
extends layout

block content
    div.row
        div.small-12.columns.profile-pic.page-title
            img.profile-pic(src="http://graph.facebook.com/"+offer.user_id+"/picture?width=120&height=120")
            h2=offer.buyer_name + " has accepted your offer!"
    div.row
        div.small-12.columns
            div.button-bar.status-buttons
                ul.button-group
                    li
                        a.button.small.success.status-action(onclick="completeOffer()")= "Complete with Venmo"
                    li 
                        a.button.small.alert.status-action(onclick="rejectOffer()")= "Reject"
                        