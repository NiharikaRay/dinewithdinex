//- Header Partial

doctype html
html
  head
    title= 'Dine With DineX'
    //- Stylesheets
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/normalize.css')
    //- Javascript
    script(type='text/javascript' src="/js/jquery.js")
    script(type='text/javascript' src="/js/foundation.min.js")
    script(type='text/javascript' src="/js/foundation.dropdown.js")    
    script(type='text/javascript' src="/js/foundation.topbar.js")
    script(type='text/javascript' src="/js/main.js")

    script(type='text/javascript').
        $(function(){
            $(document).foundation();    
        });
  body
    nav.top-bar.fixed(data-topbar)
        ul.title-area
            li.name
                h1: a(href="#")="Dine With DineX"
            li.toggle-topbar
                a(href="#")="Menu"
        section.top-bar-section
            ul.right
                li.nav-button: a(href="#")="Dashboard"
                li.nav-button: a(href="/newsfeed")="Newsfeed"
                li.nav-button: a(href="#")="Create New Offer"


    div.content
        block content
    div.footer
        block footer