//- Newsfeed
extends layout

block content
	div.row
		div.small-12.columns.page-title
			h1= "Newsfeed"
	div.row(class="offers")
		- if (offers == false){
			div.offer.row
				p There are no offers at this time. 
		-} else {
		- 	for (var i= offers.length-1, offer= offers[i]; i >= 0;  i--, offer=offers[i]) {
				div.offer.row
					a(href="/offer/" + offer._id)
						div.small-12.columns
							img.profile-thumbnail(src="http://graph.facebook.com/"+offer.user_id+"/picture?width=40&height=40")
							div.small-8.columns.offer-info
								div.small-8.columns
									h4=offer.fb_name
								div.small-4.columns
									h6="$"+offer.fixedPrice()
									div.sell_type=offer.type
		-	}
		- }
			