//- Create Form 
extends layout

block content
	div.row
		div.small-12.columns.page-title
			h1 Share My Wealth
	div.row
		form
			fieldset
				legend Create a New Offer
				div.row
					div.small-12.columns
						div.radio-select
							label.row-title Select Meal Type
							input(type="radio", name="select_type", value="block", id="select_mealblock")
							label(for="select_mealblock") Block
							input(type="radio", name="select_type",value="dinex", id="select_dinex")
							label(for="select_dinex") DineX
				div.small-12.columns
					input(type="location", placeholder="Where are you?")
				div.row
					div.small-6.columns
						div.location-input
							input.currency(type="textfield",min="0.01",step="0.01",max="20",id="input_price",placeholder="$ Enter Price")
					div.small-6.columns
						div.expiration-input
							input(type="expiration",placeholder="Expires in...")